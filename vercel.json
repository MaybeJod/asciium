{
	"version": 2,
	"builds": [
		{
			"src": "backend/index.js",
			"use": "@vercel/node"
		},
		{
			"src": "frontend/dist",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		}
	],
	"rewrites": [
		{
			"source": "/api/(.*)",
			"destination": "/backend/index.js"
		},
		{
			"source": "/(.*)",
			"destination": "/backend/index.js"
		}
	]
}
