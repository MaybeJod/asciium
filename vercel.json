{
	"version": 2,
	"builds": [
		{
			"src": "./backend/index.js",
			"use": "@vercel/node"
		},
		{
			"src": "./frontend/dist",
			"use": "@vercel/static"
		}
	],

	"rewrites": [
		{
			"source": "/(.*)",
			"destination": "/backend/server.js"
		},
		{
			"source": "/(.*)",
			"destination": "/frontend/dist/index.html"
		}
	]
}
